<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ניהול אפליקציות"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/btn_show_filter_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="אפשרויות סינון ומיון"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/lv_apps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"
        android:divider="#ccc"/>

    <Button
        android:id="@+id/btn_save_app_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="שמור שינויים באפליקציות" />

    <Button
        android:id="@+id/btn_install_apk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="התקן/עדכן אפליקציה מ-APK/APKS" />

</LinearLayout>
